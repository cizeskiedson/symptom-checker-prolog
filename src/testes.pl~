%Arquivo com todas as perguntas para avaliar os sintomas do usuario.
%
%
teste1(Sintoma) :-
    write_ln('Você está sentindo dores de cabeça?'),
    write_ln('Responda digitando 1 para sim, ou 0 para não.'),
    read(user_input, X),
    percorre_lista(Sintoma, X).

teste2(Sintoma) :-
    write_ln('Sobre tosses, responda digitando o número da opção que mais corresponde ao que está sentindo.'),
    write_ln('0 - Não estou com tosse.'),
    write_ln('1 - Tosse seca, sem presença de catarro.'),
    write_ln('2 - Tosse com presença de catarro.'),
    write_ln('3 - Tosse com presença de sangue.'),
    read(user_input, X),
    percorre_lista(Sintoma, X).

teste3(Sintoma) :-
    write_ln('Você está espirrando frequentemente?'),
    write_ln('Responda digitando 1 para sim, ou 0 para não.'),
    read(user_input, X),
    percorre_lista(Sintoma, X).

